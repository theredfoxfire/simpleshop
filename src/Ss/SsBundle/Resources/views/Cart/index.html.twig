{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Cart list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Session_id</th>
                <th>Qty</th>
                <th>Token</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ss_cart_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.sessionid }}</td>
                <td>{{ entity.qty }}</td>
                <td>{{ entity.token }}</td>
                <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ss_cart_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ss_cart_edit', { 'token': entity.token }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ss_cart_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
