					<a href="{{ path('ss_cart_show') }}" class="cart mobile  cart-target">My Cart <span id="cart-target-mobile" class="count">({{ countqty.qty }})</span></a>
					<a href="{{ path('ss_cart_show') }}" class="checkout">Check Out</a>
