						<input name="type" value="product" type="hidden">
						<input id="search-submit" class="icon " type="submit">
						<input class="search" placeholder="Cari" name="query" value="{{ app.request.get('query') }}" id="search_keywords" type="text" onKeypress="loadjs()">
