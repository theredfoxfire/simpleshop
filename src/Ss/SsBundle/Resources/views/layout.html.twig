<body id="simple-ecommerce-theme-demo-store" class="template-index">
	<div id="cart-animation">1</div>
	<!--START DRAWER-->
	{% if(countqty.qty == 0) %}
	<div id="drawer">
		<div class="container">
			
			<div class="sixteen columns description">
				<center><p class="empty">Keranjang mu masih kosong.</p></center>
				<font color="333333">{% include 'SsSsBundle:Product:hide.html.twig' %}</font>
			</div>
			
		</div>
	</div>
	{% else %}
	<div id="drawer">
		<div class="container">
			<font color="333333">{% include 'SsSsBundle:Product:hide.html.twig' %}</font>
			<form action="{{ path('ss_cart_update') }}" method="get">
				
				<!-- START ROW-->
				{% for entity in countcart %}
				{% if loop.index == 1 %}
				<div class="row first">
				{% else %}
				<div class="row">
				{% endif %}
					<div class="nine columns description">
						<img src="{{ asset('uploads/products/mini_') }}{{ entity.products.foto }}" alt="{{ entity.products.nama }}">
						<div class="info">
							<h3>
								<a href="{{ path('ss_product_show', {'id': entity.products.id, 'category' : entity.products.categories.slug, 'product' : entity.products.namaslug }) }}">
							  		{{ entity.products.nama }}
							  		
								</a>
							</h3>
							<h4>{% if entity.products.categories.gender == 1 %}
									Pria
								{% else %}
									Wanita
								{% endif %}
							</h4>
							<p>{{ entity.products.description }}</p>
							<p class="mobile">{{ entity.qty }} x Rp {{ entity.products.cost }}<br>Rp {{ entity.totalcost }}</p>
						</div>
					</div>
					<div class="two columns price desktop">
						@ Rp {{ entity.products.cost }}
					</div>
					<div class="two columns quantity desktop">
						<input name="{{ entity.token }}" id="{{ entity.token }}" value="{{ entity.qty }}" type="text" onkeypress='return harusangka(event)'> 
					</div>
					<div class="two columns total desktop">
						Rp {{ entity.totalcost }}
					</div>
					<div class="one column remove desktop">
						<a href="{{ path('ss_cart_delete', {'token': entity.token, 'id': entity.products.id }) }}" /><font size="4">X</font></a>
					</div>
				</div>
				<!-- END ROW-->
				{% endfor %}
				<!-- START ACTIONS -->
				<div class="actions desktop"><input type="submit" value="update" name="update"></div>
				<!-- END ACTIONS -->
			</form>
		</div>
	</div>
	{% endif %}
	<!--END DRAWER-->
   <!--START HEADER-->
